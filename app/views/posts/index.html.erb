<div class="col-md-9">
  <div class="page-header">
    <%= link_to new_post_path, method: "get", class: 'btn btn-primary', remote: true do %>
        <span class="glyphicon glyphicon-plus"></span>
        New Post
    <% end %>
    <h1>Listing posts</h1>
    <%= paginate @posts, :theme => 'twitter-bootstrap-3' %>
  </div>

  <div id="new_post" style="display: none;">
    <%= render "form", object: @new_post %>
  </div>
  <div id="posts" class="table-responsive">
    <%= render @posts %>
  </div>
</div>